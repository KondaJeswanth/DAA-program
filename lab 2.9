#include <stdio.h>

int isEvenOddHalves(int arr[], int n) {
  int evenCount = 0, oddCount = 0;

  // Count even and odd elements
  for (int i = 0; i < n; i++) {
    if (arr[i] % 2 == 0) {
      evenCount++;
    } else {
      oddCount++;
    }
  }

  // Check if the counts are equal (half even, half odd)
  return evenCount == oddCount;
}

int main() {
  int arr[] = {1, 2, 3, 4, 5, 6}; // Array with even and odd elements (not half-half)
  int n = sizeof(arr) / sizeof(arr[0]);

  if (isEvenOddHalves(arr, n)) {
    printf("The array has half even and half odd elements.\n");
  } else {
    printf("The array does not have half even and half odd elements.\n");
  }

  return 0;
}
